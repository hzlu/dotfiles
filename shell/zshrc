alias subl="/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl"
alias gs="git status"
alias gb="git branch"
alias gba="git branch -a"
alias ga="git add"
alias gc="git commit -m"
alias gch="git checkout"
alias glog="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --"
alias gpull="git pull --rebase upstream"
alias grebase="git rebase"
alias gpush="git push origin"
alias gcontinue="git rebase --continue"
alias gabort="git rebase --abort"
alias clr="clear"
alias ll="ls -alh"
alias rs="rvm use 2.3.0@rails4 && bundle exec rails s -b127.0.0.1"
alias sk="rvm use 2.3.0@rails4 && bundle exec sidekiq"
alias rc="rvm use 2.3.0@rails4 && bundle exec rails c"
