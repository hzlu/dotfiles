alias cdprojects="cd /Users/luhaozhao/Dropbox/"
alias dirs="dirs -v" # cd -N 或者 cd +N
alias tabtospace="find . -name '*.rb'\
  -or -name '*.erb'\
  -or -name '*.eco'\
  -or -name '*.coffee'\
  -or -name '*.scss'\
  -or -name '*.sass'\
  -or -name '*.jbuilder'\
  -or -name '*.rake'\
  -type f | xargs sed -i '' -e 's/	/  /g'"
